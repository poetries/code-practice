<script>
	//注册ul隐藏结束事件
	$("ul.list-group.collapse").on('hide.bs.collapse',function(){
		// alert('隐藏完毕');
		//找到当前ul对应的a标签中的i，将down改成left
		$(this).prev().find("i").removeClass("glyphicon-chevron-down").addClass("glyphicon-chevron-left");

	});

	//注册ul显示结束事件
	$("ul.list-group.collapse").on('show.bs.collapse',function(){
		// alert('显示完毕');
		//找到当前ul对应的a标签中的 i ，将left改成down
		$(this).prev().find("i").removeClass("glyphicon-chevron-left").addClass("glyphicon-chevron-down");
	});
	setHeight();
	//窗口大小发生变化
	$(window).on('resize', function(){
		// console.log('test');
		setHeight();
	});

	function setHeight(){
		$(".menu").css({'min-height' : $(window).height() - 50});
	}
</script>